<% var catURL; %>
<html>
<head>
    <title>Welcome to the blog</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/app.css">
</head>
<body>
    <div class= "ui fixed inverted menu">
        <div class ="ui container">
<div class = "header item"><i class="camera icon"></i>Blog Site</div>
<a href="/" class = "item">Home</a>
<a href="/new" class ="item">New Post</a>

</div>
    </div> 
    <div class = "container blog">
        <div class="ui huge header"> RESTFUL BLOG APP  </div>


<% blogs.forEach ( function(blog){  %>
    <div>
<h2> <%= blog.title %> </h2>
<div class="image">
<img src =" <%= blog.image %> " ></div>
>
<div class="meta">
    <span><%=blog.created.toDateString() %></span>
</div>
<div class="description">
<p> <%= blog.body.substring(0,100) %> </p></div>
<a href= "/  <%= blog._id  %> "> Read More</a>
    </div>

<% } ) ; %>
</div>
</body>
<footer>
    <p> copywrite @2020</p>
</footer>
</html>